# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=xtrabackup
pkgver=2.0.4
pkgrel=1
pkgdesc="A MySQL non-blocking backup solution for InnoDB and XtraDB (Percona Server) data."
arch=("i686" "x86_64")
url="http://www.percona.com/software/percona-xtrabackup/"
license=('GPL')
depends=("perl" "libaio")

source=("$pkgname-$pkgver-$CARCH.tar.gz::http://www.percona.com/downloads/XtraBackup/XtraBackup-$pkgver/binary/Linux/$CARCH/percona-$pkgname-$pkgver-484.tar.gz")

sha256sums=('8745d867ee594d5ac1c6851cd35cb7eba628b75232a287bfc464eb778cd3ff57')
[ "$CARCH" = "x86_64" ] && sha256sums=('9c14c0b630e60a5c17bfab0fed9ea2d8f8f9b123e02e81d6fff4b8e091f697a5')

package() {
	cd "$srcdir/percona-$pkgname-$pkgver/bin"
	install -d "$pkgdir/usr/bin"
	install -m0755 innobackupex xtrabackup* xbstream "$pkgdir/usr/bin/"
}
