# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=xtrabackup
pkgver=1.6.5
pkgrel=1
pkgdesc="A MySQL non-blocking backup solution for InnoDB and XtraDB (Percona Server) data."
arch=("i686" "x86_64")
url="http://www.percona.com/software/percona-xtrabackup/"
license=('GPL')
depends=("perl" "libaio")

source=("$pkgname-$pkgver-$CARCH.tar.gz::http://www.percona.com/redir/downloads/XtraBackup/XtraBackup-$pkgver/binary/Linux/$CARCH/$pkgname-$pkgver.tar.gz")

md5sums=('b93f4c3b23853e55199d177eb098e013')
[ "$CARCH" = "x86_64" ] && md5sums=('de75924dfe9ae0ff1a5bbb1caac7d472')

package() {
	cd "$srcdir/$pkgname-$pkgver/bin"
	install -d "$pkgdir/usr/bin"
	install -m0755 tar4ibd innobackupex xtrabackup* "$pkgdir/usr/bin/"
}
