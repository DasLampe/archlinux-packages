pkgname=gradiator
pkgver=12.01.2
pkgrel=1
pkgdesc="CSS3 gradient generator"
arch=(any)
url="http://gradient.inatorapp.com/"
license=('GPL')
depends=("python2" "pywebkitgtk")
makedepends=("python-distutils-extra")
source=(http://ppa.launchpad.net/cooperjona/gradiator/ubuntu/pool/main/g/gradiator/gradiator_$pkgver.tar.gz)

build() {
	cd "$srcdir/quickly_trunk"
	python2 setup.py install --root="$pkgdir" --prefix=/usr
}

md5sums=('931ea15cbe357cb8e346f7d980808734')
