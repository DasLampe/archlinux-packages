# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=python2-requests
pkgver=0.12.1
pkgrel=1
_libname=${pkgname/python2-/}
pkgdesc="Python HTTP for Humans."
url="http://python-requests.org"
makedepends=('python2-distribute')
optdepends=('python2-certifi: SSL support'
            'python2-gevent: async support'
            'python2-chardet: character encoding auto-detection'
            'python2-oauthlib: oauth authentication')
license=('custom: ISC')
arch=('any')
source=(http://pypi.python.org/packages/source/r/$_libname/$_libname-$pkgver.tar.gz)

build() {
    cd "$srcdir/$_libname-$pkgver"
    python2 setup.py build
}

package() {
    cd "$srcdir/$_libname-$pkgver"
    python2 setup.py install -O1 --root="$pkgdir"
	install -m0644 -D "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('fe9e0515d09733d0eb9e2031c03401b2')
