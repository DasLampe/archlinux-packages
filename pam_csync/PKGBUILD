# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=pam_csync
pkgver=0.42.0
pkgrel=1
pkgdesc="a file synchronizer especially designed for you, the normal user. PAM module"
arch=("i686" "x86_64")
license=('GPL2')
url="http://www.csync.org"
depends=('csync')
makedepends=('cmake')
backup=(etc/security/pam_csync.conf)
source=("http://www.csync.org/files/pam_csync-0.42.0.tar.gz")

build() {
	cd "$srcdir"
	rm -rf build
	mkdir build
	cd build
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="$pkgdir" install
}

sha256sums=('95b25ca9f3b2bb260173e6f5de7c231c0d458103e9240818875945ff980215e6')
