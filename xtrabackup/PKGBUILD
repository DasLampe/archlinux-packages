# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=xtrabackup
pkgver=1.6
pkgrel=2
pkgdesc="A MySQL non-blocking backup solution for InnoDB and XtraDB (Percona Server) data."
arch=("i686" "x86_64")
url="http://www.percona.com/software/percona-xtrabackup/"
license=('GPL')
depends=("perl" "libaio")

source=("http://www.percona.com/downloads/XtraBackup/XtraBackup-$pkgver/Linux/binary/$CARCH/$pkgname-$pkgver.tar.gz")

md5sums=('164f497de6ad59b8947f813edfcf742b')
[ "$CARCH" = "x86_64" ] && md5sums=('d17b060cb10ee8e206d2607d0fe983e3')

build() {
	cd $srcdir/bin
	install -d $pkgdir/usr/bin
	install -m0755 tar4ibd xtrabackup* $pkgdir/usr/bin/
	install -m0755 innobackupex $pkgdir/usr/bin/innobackupex
}
