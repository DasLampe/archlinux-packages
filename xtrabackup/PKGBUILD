# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=xtrabackup
pkgver=2.0.0
pkgrel=1
pkgdesc="A MySQL non-blocking backup solution for InnoDB and XtraDB (Percona Server) data."
arch=("i686" "x86_64")
url="http://www.percona.com/software/percona-xtrabackup/"
license=('GPL')
depends=("perl" "libaio")

source=("$pkgname-$pkgver-$CARCH.tar.gz::http://www.percona.com/downloads/XtraBackup/XtraBackup-$pkgver/binary/Linux/$CARCH/percona-$pkgname-$pkgver.tar.gz")

md5sums=('f6b51cdd450106eb86dea770124df0d0')
[ "$CARCH" = "x86_64" ] && md5sums=('fcd68217a3e10d14fb10c995b7249fd5')

package() {
	cd "$srcdir/percona-$pkgname-$pkgver/bin"
	install -d "$pkgdir/usr/bin"
	install -m0755 innobackupex xtrabackup* xbstream "$pkgdir/usr/bin/"
}
