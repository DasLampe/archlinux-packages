# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=xtrabackup
pkgver=1.6.4
pkgrel=1
pkgdesc="A MySQL non-blocking backup solution for InnoDB and XtraDB (Percona Server) data."
arch=("i686" "x86_64")
url="http://www.percona.com/software/percona-xtrabackup/"
license=('GPL')
depends=("perl" "libaio")

source=("$pkgname-$pkgver-$CARCH.tar.gz::http://www.percona.com/downloads/XtraBackup/XtraBackup-$pkgver/Linux/binary/$CARCH/$pkgname-$pkgver.tar.gz")
#source=("http://www.percona.com/downloads/XtraBackup/$pkgname-$pkgver/RPM/rhel6/$CARCH/$pkgname-$pkgver-274.rhel6.$CARCH.rpm")

md5sums=('67ac1ba35668a2ebdfad2dc92e149daa')
[ "$CARCH" = "x86_64" ] && md5sums=('a1e7726aab50586f73a0f23ff6f8ae24')

package() {
	cd "$srcdir/$pkgname-$pkgver/bin"
	install -d "$pkgdir/usr/bin"
	install -m0755 tar4ibd innobackupex xtrabackup* "$pkgdir/usr/bin/"
}
