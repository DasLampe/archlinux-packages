# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=xtrabackup
pkgver=2.0.1
pkgrel=1
pkgdesc="A MySQL non-blocking backup solution for InnoDB and XtraDB (Percona Server) data."
arch=("i686" "x86_64")
url="http://www.percona.com/software/percona-xtrabackup/"
license=('GPL')
depends=("perl" "libaio")

source=("$pkgname-$pkgver-$CARCH.tar.gz::http://www.percona.com/downloads/XtraBackup/XtraBackup-$pkgver/binary/Linux/$CARCH/percona-$pkgname-$pkgver-446.tar.gz")

md5sums=('447cad9a65a16b28a31c061c69ce975e')
[ "$CARCH" = "x86_64" ] && md5sums=('229b531bf758494eb406702a9139e5af')

package() {
	cd "$srcdir/percona-$pkgname-$pkgver/bin"
	install -d "$pkgdir/usr/bin"
	install -m0755 innobackupex xtrabackup* xbstream "$pkgdir/usr/bin/"
}
